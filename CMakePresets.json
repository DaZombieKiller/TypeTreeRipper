{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "displayName": "Default Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/.cmake/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/artifacts/${presetName}",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/artifacts/${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug",
      "inherits": "default",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "Release",
      "displayName": "Release",
      "inherits": "default",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "MinSizeRel",
      "displayName": "MinSizeRel",
      "inherits": "default",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "MinSizeRel" }
    },
    {
      "name": "RelWithDebInfo",
      "displayName": "RelWithDebInfo",
      "inherits": "default",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
    },
    {
      "name": "DebugAndroidARM64",
      "displayName": "Debug (Android) (arm64-v8a)",
      "inherits": "Debug",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-android",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "latest",
        "ANDROID_STL": "c++_static",
        "CMAKE_CXX_COMPILER_WORKS": true
      }
    },
    {
      "name": "RelWithDebInfoAndroidARM64",
      "displayName": "RelWithDebInfo (Android) (arm64-v8a)",
      "inherits": "DebugAndroidARM64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "DebugAndroidX8664",
      "displayName": "Debug (Android) (x86_64)",
      "inherits": "DebugAndroidARM64",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-android",
        "ANDROID_ABI": "x86_64"
      }
    },
    {
      "name": "RelWithDebInfoAndroidX8664",
      "displayName": "RelWithDebInfo (Android) (x86_64)",
      "inherits": "DebugAndroidX8664",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "DebugAndroidARM32",
      "displayName": "Debug (Android) (armeabi-v7a)",
      "inherits": "DebugAndroidARM64",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm-android",
        "ANDROID_ABI": "armeabi-v7a"
      }
    },
    {
      "name": "RelWithDebInfoAndroidARM32",
      "displayName": "RelWithDebInfo (Android) (armeabi-v7a)",
      "inherits": "DebugAndroidARM32",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "DebugAndroidX86",
      "displayName": "Debug (Android) (x86)",
      "inherits": "DebugAndroidARM64",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x86-android",
        "ANDROID_ABI": "x86"
      }
    },
    {
      "name": "RelWithDebInfoAndroidX86",
      "displayName": "RelWithDebInfo (Android) (x86)",
      "inherits": "DebugAndroidX86",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "Release"
        },
        {
            "name": "MinSizeRel",
            "configurePreset": "MinSizeRel"
        },
        {
            "name": "RelWithDebInfo",
            "configurePreset": "RelWithDebInfo"
        },
        {
            "name": "DebugAndroidARM64",
            "configurePreset": "DebugAndroidARM64"
        },
        {
            "name": "RelWithDebInfoAndroidARM64",
            "configurePreset": "RelWithDebInfoAndroidARM64"
        },
        {
            "name": "DebugAndroidX8664",
            "configurePreset": "DebugAndroidX8664"
        },
        {
            "name": "RelWithDebInfoAndroidX8664",
            "configurePreset": "RelWithDebInfoAndroidX8664"
        },
        {
            "name": "DebugAndroidARM32",
            "configurePreset": "DebugAndroidARM32"
        },
        {
            "name": "RelWithDebInfoAndroidARM32",
            "configurePreset": "RelWithDebInfoAndroidARM32"
        },
        {
            "name": "DebugAndroidX86",
            "configurePreset": "DebugAndroidX86"
        },
        {
            "name": "RelWithDebInfoAndroidX86",
            "configurePreset": "RelWithDebInfoAndroidX86"
        }
    ]
}
